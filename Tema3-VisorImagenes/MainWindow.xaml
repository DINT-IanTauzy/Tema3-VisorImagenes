<Window x:Class="Tema3_VisorImagenes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_VisorImagenes"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="650" MinWidth="700" Height="600" Width="700">
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Bottom" Background="Blue" Height="100" Margin="10"></StackPanel>
        <StackPanel DockPanel.Dock="Right" Background="Black" Width="100" Margin="10"></StackPanel>
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="40">Visor de Imagenes</TextBlock>
        <WrapPanel Margin="0,0,10,10" MinWidth="550">
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            <Image Source="./Recursos/episodioIV.jpg" Height="200"></Image>
            
        </WrapPanel>
        
    </DockPanel>
</Window>
